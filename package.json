{
  "name": "battery-monitor",
  "version": "0.1.0",
  "description": "Native macOS battery monitor tray app using Electron",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --arm64",
    "test:notify": "electron . -- --test-notify",
    "test:unit": "node tests/notification-logic.test.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.example.battery-monitor",
    "productName": "Battery Monitor",
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"],
      "icon": "assets/icon.icns"
    },
    "extraResources": [
      { "from": "assets", "to": "assets" }
    ]
  }
}
